<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventoryApp.Views.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout Padding="30">
        <Label Text="Registro" FontSize="32" HorizontalOptions="Center" />

        <Entry x:Name="NameEntry" Placeholder="Nombre" />
        <Entry x:Name="EmailEntry" Placeholder="Correo electrónico" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" />

        <Button Text="Registrar" Clicked="OnRegisterClicked" />

        <Label x:Name="ErrorMessage" TextColor="Red" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>